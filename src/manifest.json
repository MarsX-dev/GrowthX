{
  "manifest_version": 3,
  "name": "GrowthX",
  "description": "GrowthX is a free, open-source Chrome Extension that instantly adds the first name of a person you are replying to.",
  "version": "0.1",
  "action": {
    "default_icon": "img/growthX_logo_128.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "img/growthX_logo_16.png",
    "48": "img/growthX_logo_48.png",
    "128": "img/growthX_logo_128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["scripts/growthX.js"],
      "css": ["styles/styles.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "img/growth_x_logo_square_128x128_padding.png" ],
      "matches": [ "https://twitter.com/*" ]
    }
  ]
}
